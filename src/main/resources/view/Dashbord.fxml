<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ancDashboard1" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom right, #e0c3fc, #ffffff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.orm_elite_driving_school_system.controller.DashbordController">

    <!-- Add stylesheets reference -->
    <stylesheets>
        <URL value="@../styles/Dashbord.css" />
    </stylesheets>

    <children>
        <!-- Sidebar with button animations -->
        <VBox prefHeight="800.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to bottom right, #e0c3fc, #ffffff); -fx-border-radius: 10px; -fx-background-radius: 10px;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <!-- Animated Logo -->
                <StackPane prefHeight="97.0" prefWidth="300.0">
                    <children>
                        <ImageView fx:id="logoImageView" fitHeight="193.0" fitWidth="230.0" onMouseClicked="#onClick" pickOnBounds="true" preserveRatio="true" styleClass="logo">
                            <image>
                                <Image url="@../images/8255684dfa031faa06e8ece1c1e7c902-removebg-preview.png" />
                            </image>
                        </ImageView>
                  <Label fx:id="elbl" text="e-light Driving School ">
                     <StackPane.margin>
                        <Insets top="67.0" />
                     </StackPane.margin>
                     <font>
                        <Font name="Candara Bold" size="16.0" />
                     </font>
                  </Label>
                    </children>
                </StackPane>

                <!-- Animated Buttons -->
                <Button mnemonicParsing="false" onAction="#btnStudentOnAction" prefHeight="42.0" prefWidth="200.0" styleClass="sidebar-button" text="Student">
                    <VBox.margin>
                        <Insets bottom="30.0" left="50.0" right="3.0" top="99.0" />
                    </VBox.margin>
                </Button>
            <Button mnemonicParsing="false" onAction="#btnCourseOnAction" prefHeight="42.0" prefWidth="200.0" styleClass="sidebar-button" text="Course">
               <VBox.margin>
                  <Insets bottom="28.0" left="50.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnInstructorOnAction" prefHeight="42.0" prefWidth="200.0" styleClass="sidebar-button" text="Instructor">
               <VBox.margin>
                  <Insets bottom="28.0" left="50.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnLessonOnAction" prefHeight="42.0" prefWidth="200.0" styleClass="sidebar-button" text="Lessons">
               <VBox.margin>
                  <Insets bottom="28.0" left="50.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnPaymentOnAction" prefHeight="42.0" prefWidth="200.0" styleClass="sidebar-button" text="Payment">
               <VBox.margin>
                  <Insets bottom="28.0" left="50.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#btnUserOnAction" prefHeight="42.0" prefWidth="200.0" styleClass="sidebar-button" text="User">
               <VBox.margin>
                  <Insets left="50.0" />
               </VBox.margin>
            </Button>

                <!-- Repeat for other buttons with styleClass="sidebar-button" -->

            </children>
        </VBox>

        <!-- Main Content Area -->
        <AnchorPane layoutX="316.0" prefHeight="800.0" prefWidth="884.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="316.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Animated Header -->
                <HBox fx:id="headerHBox" layoutX="11.2" layoutY="32.0" prefHeight="124.0" prefWidth="862.0" styleClass="header" AnchorPane.leftAnchor="11.0" AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="15.0">
               <children>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="72.0" fitWidth="64.0" onMouseClicked="#onClickedHome" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/pngtree-home-icon-vector-png-image_16948414-removebg-preview.png" />
                           </image>
                        </ImageView>
                     </children>
                     <HBox.margin>
                        <Insets left="666.0" />
                     </HBox.margin>
                  </StackPane>
               </children></HBox>

                <!-- Animated Main Content -->
                <AnchorPane fx:id="ancDashboard" layoutX="11.2" layoutY="113.0" prefHeight="665.0" prefWidth="863.0" styleClass="main-content" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="11.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="110.0">
                    <!-- Dashboard content -->
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
